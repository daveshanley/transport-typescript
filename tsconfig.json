{
    "compilerOptions": {
      "target": "es2015",
      "baseUrl": "./",
      "outDir": "./dist",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration" : true,
      "resolveJsonModule": true,
      "lib": [
        "dom",
        "es5",
        "es6",
        "es7",
        "es2020"
      ],
      "removeComments": false,
      "noImplicitAny": true,
      "types": [
        "jasmine"
      ]
    },
    "exclude": [
      "node_modules/*",
      "chatClientApp/*",
      "proxyTestApp/*"
    ]
  }
